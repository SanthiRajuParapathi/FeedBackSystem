<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">
<welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>login.jsp</welcome-file>
</welcome-file-list>

    <display-name>Feedback Management System</display-name>

    <!-- ✅ LOGIN (Student + Faculty) -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Application.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <!-- ✅ OTP VERIFICATION -->
    <servlet>
        <servlet-name>VerifyOTPServlet</servlet-name>
        <servlet-class>Application.VerifyOTPServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyOTPServlet</servlet-name>
        <url-pattern>/verifyOTP</url-pattern>
    </servlet-mapping>
     <!-- ✅ RESEND OTP -->
    <servlet>
        <servlet-name>ResendOTPServlet</servlet-name>
        <servlet-class>Application.ResendOTPServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResendOTPServlet</servlet-name>
        <url-pattern>/resendOTP</url-pattern>
    </servlet-mapping>

    <!-- ✅ REGISTRATION (Student + Faculty with OTP) -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Application.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- ✅ FEEDBACK SUBMISSION -->
    <servlet>
        <servlet-name>SubmitFeedbackServlet</servlet-name>
        <servlet-class>Application.SubmitFeedbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitFeedbackServlet</servlet-name>
        <url-pattern>/submitFeedback</url-pattern>
    </servlet-mapping>

    

    <!-- ✅ FACULTY DASHBOARD (View Feedbacks) -->
    <servlet>
        <servlet-name>FacultyDashboardServlet</servlet-name>
        <servlet-class>Application.FacultyDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FacultyDashboardServlet</servlet-name>
        <url-pattern>/FacultyDashboardServlet</url-pattern>
    </servlet-mapping>
    <context-param>
		<param-name>smtpHost</param-name>
		<param-value>smtp.gmail.com</param-value>
	</context-param>
	<context-param>
		<param-name>smtpPort</param-name>
		<param-value>587</param-value>
	</context-param>
	<context-param>
		<param-name>emailUsername</param-name>
		<param-value>techwingeventmanagement@gmail.com</param-value>
	</context-param>
	<context-param>
		<param-name>emailPassword</param-name>
		<param-value>nien ufar anin skuz</param-value>
	</context-param>
	<context-param>
		<param-name>smtpUseTLS</param-name>
		<param-value>true</param-value>
	</context-param>

</web-app>
